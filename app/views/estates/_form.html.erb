<%= form_for(@estate,local:true) do |f|%>
<% if @estate.errors.any? %>
<div class = "alert alert-warning">
    <ul>
    <% @estate.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
</div>
<% end %>
  <div class="estates.info">
    <%= f.label :name%><br>
    <%= f.text_field :name%>
  </div>
  <div class="estates.info">
    <%= f.label :fee%><br>
    <%= f.text_field:fee %>円
  </div>
  <div class="estates-info">
    <%= f.label:adress%><br>
    <%= f.text_field:adress%>
  </div>
  <div class="estates-info">
    <%= f.label:age%><br>
    <%= f.text_field:age%>年
  </div>
  <div class="estates-info">
    <%= f.label:note%><br>
    <%= f.text_area:note%>
  </div>
<hr>
<h2>最寄り駅1</h2>
<%= f.fields_for :stations do |f|%>
  <div class = "estates-info">
    <%= f.label :station1%><br>
    <%= f.text_field :station1%>
  </div>
  <div class = "estates-info" >
    <%= f.label :line1%><br>
    <%= f.text_field:line1%>
  </div>
  <div class = "estates-info" >
    <%= f.label :walking_minutes1%><br>
    <%= f.text_field:walking_minutes1%>分
  </div>
<h2>最寄り駅2</h2>
  <div class = "estates-info">
    <%= f.label :station2%><br>
    <%= f.text_field :station2%>
  </div>
  <div class = "estates-info" >
    <%= f.label :line2%><br>
    <%= f.text_field:line2%>
  </div>
  <div class = "estates-info" >
    <%= f.label :walking_minutes2%><br>
    <%= f.text_field:walking_minutes2%>分
  </div>
<% end %>
<%= f.submit %>
<% end %>
