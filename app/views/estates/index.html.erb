<h1>物件一覧</h1>

<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<table>
  <th>物件名</th>
  <th>賃料</th>
  <th>住所</th>
  <th>築年数</th>
  <th>備考</th>
<% @estates.each do |estate| %>
<tr>
  <td><%= estate.name%></td>
  <td><%= converting_to_jpy(estate.fee)%></td>
  <td><%= estate.adress %></td>
  <td><%= estate.age %>年</td>
  <td><%= estate.note %></td>
  <td>
    <p class = "ja-text"><%= link_to "詳細",estate_path(estate.id) %></p>
  </td>
  <td>
    <p class = "ja-text"><%= link_to "編集",edit_estate_path(estate.id) %></p>
  </td>
  <td>
    <p class = "ja-text"><%= link_to "削除",estate_path(estate.id), method: :delete, data: {confirm: "本当に削除しますか？" } %></p>
  </td>
</tr>
<% end %>
</table>
